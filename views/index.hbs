<div class="container mt-5">
  <div class="d-flex justify-content-center">

    <div class="card my-5 text-center" style="width: 36rem;">
      <i class="fas fa-link mb-5 mt-4" style="font-size: 20rem;"></i>
      <div class="card-body">
        <form action="/shortened" method="POST">
          <div class="form-group mb-4">
            <input type="url" class="form-control" id="inputURL" name="inputURL" placeholder="Input URL here"
              value="{{ inputURL }}" required>
          </div>
          <button type="submit" class="btn btn-outline-primary">shorten</button>
        </form>

        {{#if shortURL}}
        <div class="my-4">
          <h2> Success! Please use this link:</h2>
          <a name="shortURL" id="short-url" href="{{shortURL}}">
            <h5>{{shortURL}}</h5>
          </a>
        </div>

        <button type="submit" class="btn btn-primary" id="copy-btn">Copy</button>

        <script>
          const shortURL = document.querySelector('#short-url')
          const copyBtn = document.querySelector('#copy-btn')
          copyBtn.addEventListener('click', function onCopyBtnclicked(event) {
            console.log('Copy Button is clicked!')
            window.getSelection().selectAllChildren(shortURL)
            document.execCommand('copy')
          })
        </script>
        {{/if}}

      </div>
    </div>
  </div>


</div>